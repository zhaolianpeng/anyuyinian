<!-- 订单列表调试页面 -->
<view class="debug-container">
  <view class="debug-title">订单列表调试</view>
  
  <view class="debug-section">
    <view class="section-title">原始数据</view>
    <view class="data-item" wx:for="{{orders}}" wx:key="id">
      <text class="label">订单ID: {{item.id}}</text>
      <text class="value">订单号: {{item.orderNo}}</text>
      <text class="value">服务名称: {{item.serviceName}}</text>
      <text class="value">价格: {{item.price}}</text>
      <text class="value">总金额: {{item.totalAmount}}</text>
      <text class="value">格式化金额: {{item.formattedAmount}}</text>
    </view>
  </view>
  
  <view class="debug-section">
    <view class="section-title">格式化测试</view>
    <view class="data-item" wx:for="{{orders}}" wx:key="id">
      <text class="label">订单ID: {{item.id}}</text>
      <text class="value">formatAmount(price): {{formatAmount(item.price)}}</text>
      <text class="value">formatAmount(totalAmount): {{formatAmount(item.totalAmount)}}</text>
      <text class="value">formatAmount(formattedAmount): {{formatAmount(item.formattedAmount)}}</text>
    </view>
  </view>
  
  <view class="debug-section">
    <view class="section-title">显示测试</view>
    <view class="data-item" wx:for="{{orders}}" wx:key="id">
      <text class="label">订单ID: {{item.id}}</text>
      <text class="value">¥{{formatAmount(item.totalAmount)}}</text>
    </view>
  </view>
</view> 